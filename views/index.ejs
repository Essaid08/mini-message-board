<html>
	<head>
		<meta charset="UTF-8" />
		<meta
			http-equiv="X-UA-Compatible"
			content="IE=edge" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="styles.css">
		<title>Mini_App</title>
	</head>
	<body>
		<h1><%= title %></h1>
		<h2><a href="/new">New message</a></h2>
		<ul>
			<% messages.forEach(message => {%>
			<li>
                <div class="user_infos">
                    <h2><%= message.user%></h2>
                    <p><%= new Date(message.added).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'numeric',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) %></p>
                </div>
                <h4><%= message.text%></h4>
				<a href="/messages/<%= message.user %>">Open message</a>
			</li>
			<br/>
			<%})%>
		</ul>
	</body>
</html>
