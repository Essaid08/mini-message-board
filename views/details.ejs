<html>
	<head>
		<meta charset="UTF-8" />
		<meta
			http-equiv="X-UA-Compatible"
			content="IE=edge" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="styles.css" />
		<title>Mini_App</title>
	</head>
	<body>
		<%if(message){ %>
			<h1><%= message.user %></h1>
			<h3><%=message.text%></h3>
			<p>
				<%= new Date(message.added).toLocaleDateString('en-US', { year: 'numeric',
				month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
			</p>
		<% }else{ %>
			<h1>Message Not Found</h1>
		<% }%>
	
	</body>
</html>
